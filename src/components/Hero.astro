  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
  }

  .hero-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 40%;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(26, 26, 46, 0.55);
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 20% 50%, rgba(255, 107, 53, 0.12) 0%, transparent 60%),
      radial-gradient(ellipse at 80% 30%, rgba(0, 180, 216, 0.15) 0%, transparent 60%),
      linear-gradient(to top, rgba(26, 26, 46, 0.8) 0%, transparent 40%);
  }

  .hero-bg::before,
  .hero-bg::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    z-index: 1;
  }

  .hero-bg::before {
    width: 400px;
    height: 400px;
    background: var(--color-sunset);
    top: -100px;
    right: -100px;
    animation: float 8s ease-in-out infinite;
  }

  .hero-bg::after {
    width: 300px;
    height: 300px;
    background: var(--color-ocean);
    bottom: -50px;
    left: -50px;
    animation: float 6s ease-in-out infinite reverse;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 2rem 1.5rem;
    max-width: 960px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-pill);
    padding: 0.5rem 1.5rem;
    margin-bottom: 2rem;
  }

  .badge-text {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--color-white);
    letter-spacing: 0.08em;
  }

  .badge-icon {
    font-size: 1.2rem;
  }

  .hero-title {
    font-family: var(--font-heading);
    font-weight: 800;
    font-size: clamp(1.5rem, 4.5vw, 3.2rem);
    color: var(--color-white);
    letter-spacing: 0.02em;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .hero-title-accent {
    background: linear-gradient(135deg, var(--color-sunset), var(--color-sunset-light), var(--color-ocean));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(0.85rem, 2vw, 1.05rem);
    color: rgba(255, 255, 255, 0.8);
    line-height: 2;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .sp-only {
    display: inline;
  }
  .pc-only {
    display: none;
  }

  @media (min-width: 768px) {
